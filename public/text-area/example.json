				},
				{
					"name": "countdown_with_hint",
					"label": "Countdown with hint",
					"multiline": true,
					"size": "-200",
					"counter": "down",
					"markdown": true,
					"hint": "**Hint** with countdown."
				}
			]
		},
		{
			"name": "additional",
			"label": "Additional",
